.container-header {
  position: fixed;
  width:100%;
  background-color:#666666;
  height:40px;
  z-index: 100;
}

.container-header:after{
  content:" ";
  display: block;
  clear: both;
}

.container-header .search-bar {
  display: block;
  margin-right:45px;
  height:30px;
  padding:5px;
  border-radius: 5px;
}

.container-header .search-bar input{
  background:#fff;
  height:100%;
  width:100%;
}

.container-header .scan-qrcode {
  float:right;
  width:40px;
  height:30px;
  padding:5px;
  color:#fff;
  background:url("data:image/png;base64,") no-repeat 50% 50%;
}

.container-body {
  position: relative;
  top:40px;
  bottom:0px;
  left:0px;
  right:0px;
  display: block;
}

.goods {
  margin:5px;
  padding: 5px;
  border-bottom: 1px dotted #cccccc;
}

.goods:after{
  content:" ";
  display: block;
  clear: both;
}

.goods .goods-img {
  float:left;
  display: inline-block;
  width: 100px;
  height: 100px;
}

.goods .goods-img image{
  width: inherit;
  height: inherit;
}

.goods .goods-detail{
  display: block;
  margin-left:105px;
}

.goods .goods-detail view {
  font-size: 10px;
  color:#999999;
}

.goods .goods-detail view:first-child {
  font-weight: bold;
  color:#353535;
  margin-bottom:5px;
}